{
  "name": "q-sys-component-browser",
  "version": "0.1.0",
  "author": "Rod Driscoll<rod@theavitgroup.com.au>",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "deploy": "node deploy.js",
    "build:deploy": "npm run build && npm run deploy",
    "build:gh-pages": "ng build --configuration github-pages",
    "favicon": "node create-favicon.js",
    "icons": "node create-pwa-icons.js",
    "build:pwa": "npm run icons && ng build --configuration production",
    "deploy:pwa": "npm run build:pwa && npm run deploy",
    "ch5-build": "ng build --configuration=crestron && node enable-eruda.js",
    "ch5-archive": "npm run ch5-build && npx ch5-cli archive -p q-sys-component-browser -d dist/q-sys-component-browser/browser -o dist",
    "ch5-deploy": "npx ch5-cli deploy -H 192.168.104.239 -t touchscreen -p dist/q-sys-component-browser.ch5z"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@q-sys/qrwc": "^0.5.0-beta",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.8",
    "@angular/cli": "^20.3.8",
    "@angular/compiler-cli": "^20.3.0",
    "@angular/pwa": "^20.3.13",
    "@angular/service-worker": "^20.3.15",
    "@crestron/ch5-utilities-cli": "^2.0.0",
    "@types/jasmine": "~5.1.0",
    "eruda": "^3.4.3",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "sharp": "^0.34.5",
    "typescript": "~5.9.2"
  }
}
